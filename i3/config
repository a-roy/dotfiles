set $terminal termite
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:sans-serif,FontAwesome 12

# mouse
focus_follows_mouse no
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+Shift+d exec --no-startup-id rofi -show run
bindsym $mod+d exec --no-startup-id rofi -modi drun -run-command "i3-msg 'exec {cmd}'" -show drun

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split container
bindsym $mod+x exec --no-startup-id ~/.i3/i3-autosplit
bindsym $mod+BackSpace open

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
#bindsym $mod+e layout splith
#bindsym $mod+Shift+e layout splitv

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

# focus oldest urgent window
bindsym $mod+z [urgent=latest] focus

# workspace/window management
bindsym $mod+Tab exec --no-startup-id men-gen -m rofi i3-winlist workspace
bindsym $mod+Shift+Tab exec --no-startup-id men-gen -m rofi i3-winlist workspace "move to "
bindsym $mod+i exec --no-startup-id i3-input -F 'rename workspace to "%s"' -P "rename workspace:"
bindsym $mod+n exec --no-startup-id i3-msg 'workspace next'
bindsym $mod+p exec --no-startup-id i3-msg 'workspace prev'
bindsym $mod+bracketright exec --no-startup-id i3-msg 'workspace next'
bindsym $mod+bracketleft exec --no-startup-id i3-msg 'workspace prev'
bindsym $mod+b exec --no-startup-id men-gen -m rofi i3-winlist
bindsym $mod+Shift+b exec --no-startup-id rofi -show window
bindsym $mod+Shift+t exec --no-startup-id men-gen -m rofi i3-winlist main workspace
bindsym $mod+t exec --no-startup-id men-gen -m rofi i3-winlist main lateral

bindsym $mod+Shift+semicolon exec --no-startup-id i3-input
bindsym $mod+Escape exec --no-startup-id i3lock-fancy

# scrot
bindsym $mod+equal exec --no-startup-id "scrot"
bindsym $mod+Shift+equal exec --no-startup-id "scrot -u"

# mpd dmenu
#bindsym $mod+c exec --no-startup-id clerk
bindsym $mod+c exec --no-startup-id men-gen --menu=rofi mpd
bindsym $mod+v exec --no-startup-id men-gen --menu=rofi emoji
bindsym $mod+m exec --no-startup-id men-gen --menu=rofi menus

# switch to workspace
bindsym $mod+grave workspace number 0
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
