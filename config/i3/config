# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:sans-serif,FontAwesome 8

# mouse
focus_follows_mouse no
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $terminal

# kill focused window
bindsym $mod+Shift+q kill

# start rofi (a program launcher)
bindsym $mod+Shift+d exec --no-startup-id rofi -show run
bindsym $mod+d exec --no-startup-id rofi -modi drun -run-command "i3-msg 'exec {cmd}'" -show drun

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split container
bindsym $mod+x exec --no-startup-id ~/.config/i3/i3-autosplit.py
# create invisible placeholder
bindsym $mod+BackSpace open

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
#bindsym $mod+e layout splith
#bindsym $mod+Shift+e layout splitv

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

# focus oldest urgent window
bindsym $mod+z [urgent=latest] focus

# workspace/window management
bindsym $mod+grave exec --no-startup-id men-gen -m rofi i3-winlist workspace
bindsym $mod+Shift+grave exec --no-startup-id men-gen -m rofi i3-winlist workspace "move to "
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Shift+Tab exec --no-startup-id rofi -show window
bindsym $mod+i exec --no-startup-id i3-input -F 'rename workspace to "%s"' -P "rename workspace:"
bindsym $mod+n workspace next
bindsym $mod+p workspace prev
bindsym $mod+bracketright workspace next
bindsym $mod+bracketleft  workspace prev
bindsym $mod+b exec --no-startup-id men-gen -m rofi i3-winlist
#bindsym $mod+Shift+b exec --no-startup-id rofi -show window
bindsym $mod+Shift+t exec --no-startup-id men-gen -m rofi i3-winlist main workspace
bindsym $mod+t exec --no-startup-id men-gen -m rofi i3-winlist main lateral

bindsym $mod+Shift+semicolon exec --no-startup-id i3-input
