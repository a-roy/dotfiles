# resize window (you can also use the mouse for that)
mode " resize" {
        bindsym h resize shrink width 10 px or 5 ppt
        bindsym j resize grow height 10 px or 5 ppt
        bindsym k resize shrink height 10 px or 5 ppt
        bindsym l resize grow width 10 px or 5 ppt

        bindsym Left resize shrink width 10 px or 5 ppt
        bindsym Down resize grow height 10 px or 5 ppt
        bindsym Up resize shrink height 10 px or 5 ppt
        bindsym Right resize grow width 10 px or 5 ppt

        # back to normal
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Ctrl+bracketleft mode "default"
}

bindsym $mod+r mode " resize"

mode " focus" {
        bindsym h focus left
        bindsym j focus down
        bindsym k focus up
        bindsym l focus right
        bindsym bracketright workspace next
        bindsym bracketleft workspace prev

        bindsym Left focus left
        bindsym Down focus down
        bindsym Up focus up
        bindsym Right focus right

        # back to normal
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Ctrl+bracketleft mode "default"
}

bindsym $mod+g mode " focus"

mode "twmn" {
        bindsym o exec --no-startup-id twmnc --remote activate
        bindsym n exec --no-startup-id twmnc --remote next
        bindsym p exec --no-startup-id twmnc --remote previous
        bindsym h exec --no-startup-id twmnc --remote hide

        # back to normal
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Ctrl+bracketleft mode "default"
}

bindsym $mod+period mode "twmn"

